---
interface Props {
  classList?: string;
}

const {classList = ''} = Astro.props;
---

<button id="counter" type="button" class={classList}>%count%</button>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    let count = 0;
    const counter = document.getElementById('counter');
    counter.innerText = `Click Me!`;
    counter.addEventListener('click', () => {
      counter.innerText = `Count is ${++count}`;
    });
  });
</script>
